{
  "environment": {
    "python_path": "/Users/tinosingh/Documents/whisper_workspace/W3/whisper/bin/python",
    "python_version": "3.11"
  },
  "tasks": {
    "transcription": {
      "model": "openai/whisper-base",
      "device": "auto",
      "language": "en",
      "fp16": false,
      "enabled": true
    },
    "spellcheck": {
      "model": "t5-base",
      "enabled": true
    },
    "summarization": {
      "model": "facebook/bart-large-cnn",
      "enabled": true,
      "max_length": 130,
      "min_length": 30
    }
  },
  "audio": {
    "sample_rate": 16000,
    "chunk_duration_sec": 3.0,
    "channels": 1,
    "silence_threshold": 0.03
  },
  "debug": {
    "enabled": true,
    "log_level": "INFO",
    "log_file": "logs/transcription.log"
  },
  "paths": {
    "cache_dir": "~/.cache/whisper_app",
    "log_dir": "logs",
    "output_dir": "output"
  }
}